    "version": "2.0.0",
    "tasks": [
        {
            "label": "transmit",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}\\assert\\python\\insert_local_text.win.py",
                "-i",
                "${file}",
                "-o",
                "${workspaceFolder}\\assert\\resources\\${fileBasename}.md"
            ],
            "group": "test"
        },
        {
            "label": "RunPython",
            "type": "shell",
            "command": "python",
            "args": [
                "${file}"
            ],
            "group": "build",
        }
    ]
}